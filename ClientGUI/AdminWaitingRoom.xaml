<Page x:Class="ClientGUI.AdminWaitingRoom"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClientGUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminWaitingRoom">

    <Page.Resources>
        <FontFamily x:Key="Babapro">/Fonts/BabaPro.ttf#BABAPRO FONT</FontFamily>
    </Page.Resources>

    <Page.Background>
        <ImageBrush ImageSource="Images/waitingRoom9.jpeg"/>
    </Page.Background>

    <Grid>
        <Button Background="Teal"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                BorderBrush="Transparent"
                Margin="20,20,0,0"
                Click="CloseRoom_Click"
                Content="Close Room"
                FontSize="25">
        </Button>

        <Button Background="Teal"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                BorderBrush="Transparent"
                Margin="0,20,20,0"
                Click="StartGame_Click"
                Content="Start Game"
                FontSize="25">
        </Button>
    </Grid>
</Page>

<Page x:Class="ClientGUI.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClientGUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage"
      Background="White">

    <Grid>
        <TextBlock Text="Home Page"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Center"
                   Margin="0,40,0,0"
                   FontSize="45"
                   FontWeight="Bold"/>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Vertical"
                    Margin="0,0,0,0">

            <StackPanel HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Orientation="Horizontal"
                        Margin="0,0,0,10">
                
                <Image Source="Images/create.png"
                       Width="30"
                       VerticalAlignment="Bottom"/>

                <Button Name="CreateRoomButton"
                        Content="Create New Room"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Padding="2"
                        FontSize="22"
                        FontWeight="Bold"
                        Foreground="MediumBlue"
                        BorderThickness="0"
                        Background="#00000000"
                        Cursor="Hand"/>
            </StackPanel>

            <StackPanel HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Orientation="Horizontal"
                        Margin="0,0,0,10">

                <Image Source="Images/meeting.png"
                       Width="30"
                       VerticalAlignment="Bottom"
                       HorizontalAlignment="Left"/>

                <Button Name="JoinRoomButton"
                        Content="Join Room"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Padding="2"
                        FontSize="22"
                        FontWeight="Bold"
                        Foreground="MediumBlue"
                        BorderThickness="0"
                        Background="#00000000"
                        Cursor="Hand"
                        Margin="3,0,0,0"/>
            </StackPanel>

            <StackPanel HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Orientation="Horizontal"
                        Margin="0,0,0,10">

                <Image Source="Images/stats.png"
                       Width="30"
                       VerticalAlignment="Bottom"
                       HorizontalAlignment="Left"/>

                <Button Name="StatisticsButton"
                        Content="View Statistics"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Padding="2"
                        FontSize="22"
                        FontWeight="Bold"
                        Foreground="MediumBlue"
                        BorderThickness="0"
                        Background="#00000000"
                        Cursor="Hand"
                        Margin="3,0,0,0"/>
            </StackPanel>

            <StackPanel HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Orientation="Horizontal"
                        Margin="0,0,0,10">

                <Image Source="Images/leave.png"
                       Width="25"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="5,0,0,0"/>

                <Button Name="LogoutButton"
                        Content="Logout :("
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Padding="2"
                        FontSize="22"
                        FontWeight="Bold"
                        Foreground="MediumBlue"
                        BorderThickness="0"
                        Background="#00000000"
                        Cursor="Hand"
                        Margin="3,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

<Window x:Class="ClientGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientGUI"
        mc:Ignorable="d"
        Title="Trivia" Height="450" Width="800">
    <Grid>
        <TextBlock Name="Title"
                   Text="Our Sexy Trivia"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Center"
                   Margin="0,40,0,0"
                   FontSize="40"
                   FontWeight="Bold"/>

        <Grid HorizontalAlignment="Center"
              VerticalAlignment="Center">
            <!--Moves up on field focus-->
            <TextBlock Name="UsernameTextBlock"
                       Text="Username"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Margin="28,22,0,0"
                       FontSize="16"
                       FontWeight="SemiBold"/>

            <TextBox Name="UsernameField"
                     Height="30"
                     Width="200"
                     TextWrapping="Wrap"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Center"
                     VerticalContentAlignment="Center"
                     Margin="0,20,0,0"
                     Padding="28,0,0,0"
                     BorderBrush="DarkGray"
                     BorderThickness="0,0,0,2"
                     FontSize="16"
                     MaxLength="16"
                     Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                     GotFocus="Username_GotFocus"
                     LostFocus="Username_LostFocus">
                <TextBox.Background>
                    <ImageBrush ImageSource="Images/user.png"
                                Stretch="Uniform"
                                AlignmentX="Left"
                                AlignmentY="Center"
                                ViewportUnits="RelativeToBoundingBox"
                                Viewport="0.01,0.1,1,0.8"/>
                </TextBox.Background>
            </TextBox>

            <!--Moves up on field focus-->
            <TextBlock Name="PasswordTextBlock"
                       Text="Password"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Margin="28,73,0,0"
                       FontSize="16"
                       FontWeight="SemiBold"/>

            <PasswordBox Name="PasswordField"
                         Height="30"
                         Width="200"
                         VerticalAlignment="Top"
                         HorizontalAlignment="Center"
                         VerticalContentAlignment="Center"
                         Margin="0,70,0,0"
                         Padding="28,0,0,0"
                         BorderBrush="DarkGray"
                         BorderThickness="0,0,0,2"
                         FontSize="16"
                         GotFocus="Password_GotFocus"
                         LostFocus="Password_LostFocus"
                         MaxLength="8"
                         PasswordChanged="Password_PasswordChanged">
                <PasswordBox.Background>
                    <ImageBrush ImageSource="Images/password.png"
                                Stretch="Uniform"
                                AlignmentX="Left"
                                AlignmentY="Center"
                                ViewportUnits="RelativeToBoundingBox"
                                Viewport="0.01,0.1,1,0.8"/>
                </PasswordBox.Background>
            </PasswordBox>

            <!--Will be swapped with PasswordBox on password reveal-->
            <TextBox Name="PasswordTextBox" 
                     Height="30" 
                     Width="200" 
                     VerticalAlignment="Top" 
                     HorizontalAlignment="Center" 
                     VerticalContentAlignment="Center" 
                     Margin="0,70,0,0" 
                     Padding="28,0,0,0" 
                     BorderBrush="DarkGray" 
                     BorderThickness="0,0,0,2"
                     FontSize="16"
                     Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                     GotFocus="Password_GotFocus"
                     LostFocus="Password_LostFocus"
                     Visibility="Collapsed">
                <TextBox.Background>
                    <ImageBrush ImageSource="Images/password.png"
                                Stretch="Uniform"
                                AlignmentX="Left"
                                AlignmentY="Center"
                                ViewportUnits="RelativeToBoundingBox"
                                Viewport="0.01,0.1,1,0.8"/>
                </TextBox.Background>
            </TextBox>

            <CheckBox Name="ShowPasswordCheckBox"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Top"
                      Margin="0,72,5,0"
                      Checked="ShowPasswordCheckBox_Checked"
                      Unchecked="ShowPasswordCheckBox_Unchecked">
                <CheckBox.Template>
                    <ControlTemplate TargetType="{x:Type CheckBox}">
                        <Image Name="image" Width="30" Height="30" Margin="0,-6"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="image" Property="Source" Value="Images/eyesClosed.png"/>
                                <Setter TargetName="image" Property="ToolTip" Value="Hide password"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="image" Property="Source" Value="Images/eyesOpen.png"/>
                                <Setter TargetName="image" Property="ToolTip" Value="Show password"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </CheckBox.Template>
            </CheckBox>

            <Button Name="LoginSubmit"
                    Content="LOGIN"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Width="100"
                    Margin="0,120,0,0"
                    Padding="0,10,0,10"
                    BorderBrush="DarkGray"
                    BorderThickness="1.5"
                    FontSize="13"
                    FontWeight="Black"
                    Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</Window>
